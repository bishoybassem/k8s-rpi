kind: StorageClass
apiVersion: storage.k8s.io/v1
metadata:
  name: local-storage
provisioner: kubernetes.io/no-provisioner
volumeBindingMode: WaitForFirstConsumer
---
kind: PersistentVolume
apiVersion: v1
metadata:
  name: registry-pv
  labels:
    type: local
spec:
  storageClassName: local-storage
  capacity:
    storage: 1Gi
  accessModes:
  - ReadWriteOnce
  local:
    path: /var/lib/registry
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ hostvars['master'].ansible_hostname }}
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: registry-pvc
spec:
  storageClassName: local-storage
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
kind: Secret
apiVersion: v1
metadata:
  name: registry-tls
type: tls
data:
  tls.crt: {{ registry_tls_crt }}
  tls.key: {{ registry_tls_key }}
---
kind: Service
apiVersion: v1
metadata:
  name: registry
spec:
  ports:
  - name: https
    port: 443
    targetPort: https
  selector:
    app: registry
  clusterIP: {{ registry_service_cluster_ip }}
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: registry
spec:
  selector:
    matchLabels:
      app: registry
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: registry
    spec:
      containers:
      - name: registry
        image: registry:2.7.1
        ports:
        - name: https
          containerPort: 5000
        env:
        - name: REGISTRY_HTTP_TLS_CERTIFICATE
          value: /tls/tls.crt
        - name: REGISTRY_HTTP_TLS_KEY
          value: /tls/tls.key
        volumeMounts:
        - name: registry-data
          mountPath: /var/lib/registry
        - name: registry-tls-data
          mountPath: /tls
          readOnly: true
      volumes:
      - name: registry-data
        persistentVolumeClaim:
          claimName: registry-pvc
      - name: registry-tls-data
        secret:
          secretName: registry-tls
