---
kind: Pod
apiVersion: v1
metadata:
  name: kube-scheduler
  namespace: kube-system
spec:
  hostNetwork: true
  containers:
  - name: kube-scheduler
    image: "{{ hyperkube_image_name }}:{{ kubernetes_version }}"
    command:
    - /hyperkube
    - scheduler
    - "--master=127.0.0.1:8080"
    - "--leader-elect=false"
    livenessProbe:
      httpGet:
        scheme: HTTP
        host: 127.0.0.1
        port: 10251
        path: "/healthz"
      initialDelaySeconds: 30
      timeoutSeconds: 15